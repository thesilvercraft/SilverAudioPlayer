<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="180"
        x:Class="SilverCraft.AvaloniaUtils.MessageBox"
        Title="MessageBox"  ExtendClientAreaToDecorationsHint="True" CanResize="False"  Height="180">
  <Grid RowDefinitions="25,*" Margin="5">
    <TextBlock Grid.Row="0" Text="{Binding Title}" Margin="5"/>
    <TextBlock Grid.Row="1" Text="{Binding Message}" Margin="5"/>
    <Button Click="CloseButtonClick" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" HorizontalContentAlignment="Center">OK</Button>
  </Grid>
</Window>
