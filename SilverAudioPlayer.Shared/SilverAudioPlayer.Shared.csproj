<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="../SilverAudioPlayer.targets" />

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Configurations>Debug;Release</Configurations>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <Title>SilverAudioPlayer's Shared code</Title>
        <Product>SilverAudioPlayer</Product>
        <Description>Code shared between all SilverAudioPlayer modules</Description>
        <RepositoryUrl>https://github.com/thesilvercraft/SilverAudioPlayer</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageProjectUrl>https://github.com/thesilvercraft/SilverAudioPlayer/tree/master/SilverAudioPlayer.Shared</PackageProjectUrl>
        <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
        <IncludeSymbols>True</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="ReactiveUI" Version="18.4.22" />
        <PackageReference Include="Serilog" Version="2.12.0" />
        <PackageReference Include="SilverCraft.SilverConfig" Version="1.0.3" />
        <PackageReference Include="System.Composition" Version="7.0.0" />
        <!--<PackageReference Include="VideoLibrary" Version="3.2.2" />-->
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\SilverMagicBytes\SilverMagicBytes.csproj" />
    </ItemGroup>

</Project>
