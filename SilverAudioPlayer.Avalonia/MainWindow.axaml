<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SilverAudioPlayer.Avalonia.MainWindow"
        Title="SilverAudioPlayer.Avalonia" DragDrop.AllowDrop="True">
	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="FontWeight" Value="Bold" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="Height" Value="50" />
		</Style>
	</Window.Styles>
	<StackPanel DragDrop.AllowDrop="True">
		<ProgressBar HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="50" />
		<Grid ColumnDefinitions="*,*,*,*,*,*,*,*" Margin="0,10,0,10" DragDrop.AllowDrop="True">
			<Button Name="PlayButton" Grid.Column="3">Play</Button>
			<Button Name="PauseButton" Grid.Column="4">Pause</Button>
			<Button Name="StopButton" Grid.Column="5">Stop/Skip</Button>
			<Button Name="Settings" Grid.Column="6">Settings</Button>
		</Grid>
		<TreeView Name="TreeView" DragDrop.AllowDrop="True">
			<TreeView.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Clear Queue" Click="ClearAll" />
					<MenuItem Header="Remove Selected" Click="RemoveSelected" />
				</ContextMenu>
			</TreeView.ContextMenu>
		</TreeView>
	</StackPanel>
</Window>