<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SilverAudioPlayer.Any.PlayStreamProvider.JellyFin.AuthInfoWindow"
        Title="AuthInfoWindow">
    <Grid>

        <Grid ColumnDefinitions="*,500,*" RowDefinitions="*,*,*,*,*">
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Username:" TextAlignment="Left" VerticalAlignment="Top" />
            <TextBox Grid.Column="1" Name="UserName" Grid.Row="1" Height="10" VerticalAlignment="Top" />
            <TextBlock Grid.Column="0" Grid.Row="2" Text="Password:" TextAlignment="Left" VerticalAlignment="Top" />
            <TextBox Grid.Column="1" Name="Password" Grid.Row="2" Height="10" VerticalAlignment="Top" />
            <Button Grid.Column="2" Click="ButtonClick" Grid.Row="2" Margin="30,0,0,0" VerticalAlignment="Top">Confirm</Button>
            <TextBlock Grid.Column="1" Grid.Row="3"
                       Text="Server connection failed! Try another username or another password?" Name="Fail"
                       IsVisible="false" Foreground="Red" />
        </Grid>
    </Grid>
</Window>